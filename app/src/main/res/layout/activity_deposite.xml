<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_deposite_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="充值金额"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/yuan10"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:textSize="20dp"
                android:text="10元" />

            <Button
                android:id="@+id/yuan20"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:text="20元"
                android:textSize="20dp" />

            <Button
                android:id="@+id/yuan50"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:text="50元"
                android:textSize="20dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/yuan100"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:textSize="20dp"
                android:text="100元" />

            <Button
                android:id="@+id/yuan200"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:text="200元"
                android:textSize="20dp" />

            <Button
                android:id="@+id/yuanother"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:text="自定义"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_deposite"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="立即充值"
        android:onClick="payV2"
        android:textSize="20dp" />

</LinearLayout>