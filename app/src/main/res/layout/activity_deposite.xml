<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/czje"
        android:text="充值金额"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textSize="25dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="19dp">

        <ImageView
            android:id="@+id/ali_RMB"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:paddingLeft="5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/aliqian" />

        <EditText
            android:id="@+id/ed_chongzhiRMB"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/ali_RMB"
            android:background="@null"
            android:inputType="number"
            android:singleLine="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:background="#F0F0F0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/czdao"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="充值到"
        android:textSize="25dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/ali_balance"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@mipmap/alibalance" />

        <TextView
            android:id="@+id/tv_yue"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/ali_balance"
            android:text="余额"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_yue"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="28dp"
            android:text="SCS团队将全程保障您的资金安全"
            android:textSize="15dp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0F0"
        android:orientation="vertical">

        <Button
            android:id="@+id/cz_xyb"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#1195DA"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>